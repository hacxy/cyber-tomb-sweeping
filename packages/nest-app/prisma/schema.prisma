model Member {
  id        Int      @id @default(autoincrement())
  username  String?  @unique
  openId    String?  @unique
  mobile    String?  @unique
  enable    Boolean? @default(true)
  headImg   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
